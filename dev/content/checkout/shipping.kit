<section id="shipping">
    
    <form action="/action_page.php">

        <h2>Shipping info</h2>
        
        <ul class="input-fields">
            <li class="form-item1">
                <label for="name" class="h4">Name</label>
                <input type="text" id="name" name="Name">
            </li>
            
            <li class="form-item2">
                <label for="address" class="h4">Address</label>
                <input type="text" id="address" name="Address">
            </li>
            
            <li class="form-item3">
                <label for="city" class="h4">City</label>
                <input type="text" id="city" name="City">
            </li>
                
            <li class="form-item4">
                <label for="state" class="h4">State</label>
                <input type="text" id="state" name="State">
            </li>
            
            <li class="form-item5">
                <label for="zip" class="h4">Zip</label>
                <input type="text" id="zip" name="Zip">
            </li>
            
            <li class="form-item6">
                <label for="country" class="h4">Country</label>
                <input type="text" id="country" name="Country">
            </li>
        </ul>

        <div class="radio-button">
            <div class="radio-container">
                <input type="radio" name="Standard" id="standard">
                <div class="radio-circle">
                    <div class="inner-circle"></div>
                </div>
                <label for="standard">Standard shipping</label>
            </div>
            <p class="body-copy">Mar 18</p>
        </div>

        <div class="radio-button">
            <div class="radio-container">
                <input type="radio" name="Expedited" id="expedited">
                <div class="radio-circle">
                    <div class="inner-circle"></div>
                </div>
                <label for="expedited">Expedited shipping <span>+$14</span></label>
            </div>
            <p class="body-copy">Mar 15</p>
        </div>

        <div class="form-item7">
            <label for="contact" class="h4">Contact</label>
            <input type="email" id="contact" name="Contact" placeholder="Email">
        </div>
        
    </form>


    <button class="teal-button">Complete purchase</button>
</section>